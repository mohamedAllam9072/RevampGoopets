<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/sheetMainView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="?actionBarSize"
        android:background="@drawable/bg4"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/attachDocument"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle2"
                    android:backgroundTint="#745DEA"
                    android:padding="16dp"
                    android:src="@drawable/ic_file" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Document"
                    android:textAlignment="center"
                    android:textColor="#7E8C97" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachCamera"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle2"
                    android:backgroundTint="#E72B6D"
                    android:padding="16dp"
                    android:src="@drawable/ic_camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Camera"
                    android:textAlignment="center"
                    android:textColor="#7E8C97" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachGallery"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle2"
                    android:backgroundTint="#B45AE5"
                    android:padding="16dp"
                    android:src="@drawable/ic_gallery" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Gallery"
                    android:textAlignment="center"
                    android:textColor="#7E8C97" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/attachAudio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle2"
                    android:backgroundTint="#E55C31"
                    android:padding="16dp"
                    android:src="@drawable/ic_audio" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Audio"
                    android:textAlignment="center"
                    android:textColor="#7E8C97" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachLocation"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle2"
                    android:backgroundTint="#20994E"
                    android:padding="16dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Location"
                    android:textAlignment="center"
                    android:textColor="#7E8C97" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/attachContact"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle2"
                    android:backgroundTint="#0090CF"
                    android:padding="16dp"
                    android:src="@drawable/ic_contact" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Contact"
                    android:textAlignment="center"
                    android:textColor="#7E8C97" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>